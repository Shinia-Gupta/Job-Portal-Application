<h1 class="text-white mb-4 mt-3">Register</h1>
<%if(errorMsg){%>
  <div class="alert alert-danger" role="alert">
    <%=errorMsg%>
  </div>
  <%}%>
    <form action="/register" method="post">
      <div class="row mb-3">
        <label for="company" class="col-sm-2 col-form-label text-white">Company</label>
        <div class="col-sm-5">
          <input type="text" class="form-control" id="company" name="company">
        </div>
      </div>
      <div class="row mb-3">
        <label for="username" class="col-sm-2 col-form-label text-white">User Name</label>
        <div class="col-sm-5">
          <input type="text" class="form-control" id="username" name="username">
        </div>
      </div>
      <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label text-white">Email</label>
        <div class="col-sm-5">
          <input type="email" class="form-control" id="inputEmail3" name="email">
        </div>
      </div>
      <div class="row mb-3">
        <label for="inputPassword3" class="col-sm-2 col-form-label text-white">Password</label>
        <div class="col-sm-5">
          <input type="password" class="form-control" id="inputPassword3" name="password">
        </div>
      </div>
      <button type="submit" class="btn btn-success">Sign Up</button>
    </form>